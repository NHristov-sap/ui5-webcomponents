<div
	id="{{_id}}"
	class="ui5-step-input-root"
	style="{{styles}}"
	@keydown="{{_onkeydown}}"
	@focusin="{{_onfocusin}}"
	@focusout="{{_onfocusout}}"
>
	<div
		class="ui5-step-icon ui5-step-dec"
		title="{{decIconTitle}}"
		?interactive="{{_decIconInteractive}}"
	>
		<ui5-icon
			id="{{_id}}-dec"
			name="{{decIconName}}"
			tabindex="-1"
			accessible-name="{{decIconTitle}}"
			?interactive="{{_decIconInteractive}}"
			?defocused="{{_disableFocus}}"
			@click="{{_decValue}}"
			input-icon
		></ui5-icon>
	</div>

	<!-- INPUT -->
	<ui5-input
			id="{{_id}}-inner"
			class="ui5-step-input-input"
			placeholder="{{_placeholder}}"
			type="{{type}}"
			value="{{_valuePrecisioned}}"
			?disabled="{{disabled}}"
			?required="{{required}}"
			?readonly="{{readonly}}"
			value-state="{{valueState}}"
			data-sap-focus-ref
			text-align="{{textAlign}}"
			._inputAccInfo ="{{accInfo}}"
			@ui5-change="{{_onInputChange}}"
			@ui5-submit="{{_onInputChange}}"
			@focusout="{{_onInputChange}}"
	>
	</ui5-input>

	<div
		class="ui5-step-icon ui5-step-inc"
		title="{{incIconTitle}}"
		?interactive="{{_incIconInteractive}}"
	>
		<ui5-icon
			id="{{_id}}-inc"
			name="{{incIconName}}"
			tabindex="-1"
			accessible-name="{{incIconTitle}}"
			?interactive="{{_incIconInteractive}}"
			@click="{{_incValue}}"
			@mousedown="{{_onmousedown}}"
			@mouseup="{{_onmouseup}}"
			input-icon
		></ui5-icon>
	</div>

	<slot name="formSupport"></slot>

</div>
